<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <form style="background-color: white;text-align: center;padding: 20px;border-radius: 5px">
        <div class="row">
          <div class="col-sm-8">
                <label class="control-label col-xs-3" for="time">Date</label>
          </div>
        </div>
        <div class="row">
          <div class="form-group col-sm-10">
              <input type="text" class="form-control" value="{{date}}" style="padding: 10px;border: none;border-bottom: solid 2px #c9c9c9;transition: border 0.3s;background-color: white;font-size: 18px;" readonly />
          </div>
          <div class="col-sm-2">
              <span class="fa fa-calendar fa-2x"></span>
          </div>
        </div>
        <div class="form-group">
            <label class="control-label col-xs-4" for="intials">Employee Initials</label>
            <input type="text" class="form-control style-4 js-empIntial" name="intials" value="{{init}}" style="padding: 10px;border: none;border-bottom: solid 2px #c9c9c9;transition: border 0.3s;background-color: white;">
        </div>
        <div class="radio">
            <label class="control-label" for="reportConfirmation">Tanks Dipped?</label> <br />
            &nbsp&nbsp&nbsp&nbsp
            {{#equaltoo dipped_yn 1}}
            <input type="radio" name="reportConfirmation" value=true checked>YES &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
            <input type="radio" name="reportConfirmation" value=false>NO
            {{else}}
            <input type="radio" name="reportConfirmation" value=true>YES &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
            <input type="radio" name="reportConfirmation" value=false checked>NO
            {{/equaltoo}}
        </div>
    </form>
    <div>
</div>


<div class="row">
    <table class="table">
        <thead>
            <tr class="card">
                <th>Tank</th>
                <th>Grade</th>
                <th>Description</th>
                <th>Water</th>
            </tr>
        </thead>
        <tbody class="js-manualGasDipBody">
            {{#each rows}}
                <tr class="card">
                    <td class="form-group mytable">
                        <p class="js-tank">{{tank}}</p>
                    </td>
                    <td class="form-group mytable ">
                        <p class="js-grade">{{grade}}</p>
                    </td>
                    <td class="form-group mytable ">
                        <p class="js-desc">{{description}}<p>
                    </td>
                    <td class="form-group mytable">
                        <input type="number" class="js-water" min=0 value="{{water}}">
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>
<div class="row">
    <div class="form-group col-sm-3 col-sm-offset-6">
        <button class="btn btn--dark btn-block js-gasDipReportSubmit" data-accType="Save" data-loading-text="Loading...">Save</button>
    </div>
    <div class="form-group col-sm-3">
        <button class="btn btn--action btn-block js-gasDipReportSubmit" data-accType="Complete" data-loading-text="Loading...">Complete</button>
    </div>
</div>
