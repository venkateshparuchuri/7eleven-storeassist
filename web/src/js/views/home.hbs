<div class="row">
    <div class="panel-group" id="accordion">
        {{#each rows}}
            {{#equaltoo read 1}}
                <div class="panel panel-default bs-callout bs-callout-danger">
                    <div class="row">
                        <div class="col-sm-10">
                          <div class="col-sm-4">
                            <h4 class="panel-title">
                              <i class="fa fa-bell-o fa-2x" aria-hidden="true"></i>
                              <span>{{subject}}</span>
                            </h4>
                          </div>
                          <div class="col-sm-5">

                            <span>{{date_sent}}</span>
                          </div>
                          <div class="col-sm-3">

                            <span>{{time_sent}}</span>
                          </div>
                        </div>
                        <div class="col-sm-2" data-read="{{read}}" data-message_id="{{message_id}}">
                            <a data-toggle="collapse" data-parent="#accordion" href="#{{message_id}}" class="js-statusText">Show</a>&nbsp&nbsp<i class="fa fa-angle-double-down" aria-hidden="true"></i>
                        </div>
                    </div>
                    <div id="{{message_id}}" class="panel-collapse collapse">
                        <div class="panel-body">{{body}}</div>
                    </div>
                </div>
                {{else}}
                <div class="panel panel-default bs-callout bs-callout-success">
                    <div class="row">
                      <div class="col-sm-10">
                        <div class="col-sm-4">
                          <h4 class="panel-title">
                            <i class="fa fa-bell-o fa-2x" aria-hidden="true"></i>
                            <span>{{subject}}</span>
                          </h4>
                        </div>
                        <div class="col-sm-5">

                          <span>{{date_sent}}</span>
                        </div>
                        <div class="col-sm-3">
                          
                          <span>{{time_sent}}</span>
                        </div>
                      </div>
                        <div class="col-sm-2" data-read="{{read}}" data-message_id="{{message_id}}">
                            <a data-toggle="collapse" data-parent="#accordion" href="#{{message_id}}" class="js-statusText">Show</a>&nbsp&nbsp<i class="fa fa-angle-double-down" aria-hidden="true"></i>
                        </div>
                    </div>
                    <div id="{{message_id}}" class="panel-collapse collapse">
                        <div class="panel-body">{{body}}</div>
                    </div>
                </div>
            {{/equaltoo}}
        {{/each}}
    </div>
</div>
